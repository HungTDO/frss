<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/item_margin"
    android:paddingTop="@dimen/item_margin">

    <ImageView
        android:id="@+id/nav_item_icon"
        android:layout_width="@dimen/nav_row_view_width"
        android:layout_height="@dimen/nav_row_image_size"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/globe" />

    <TextView
        android:id="@+id/nav_item_name"
        android:layout_width="@dimen/nav_row_view_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/nav_row_text_margin_left"
        android:layout_weight="2"
        android:text="@string/nav_row_item_text"
        android:textColor="@color/nav_row_text_color"
        android:textSize="@dimen/nav_row_text_size" />

</LinearLayout>