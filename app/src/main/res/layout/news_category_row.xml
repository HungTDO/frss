<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardListItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/news_cat_card_margin_top_bottom"
    android:layout_marginLeft="@dimen/news_cat_card_margin_right_left"
    android:layout_marginRight="@dimen/news_cat_card_margin_right_left"
    android:layout_marginTop="@dimen/news_cat_card_margin_top_bottom"
    android:foreground="?android:attr/selectableItemBackground"
    card:cardCornerRadius="@dimen/news_cat_card_corner_radius"
    card:cardElevation="@dimen/news_cat_card_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="@dimen/news_cat_layout_padding_top_bottom"
        android:paddingLeft="@dimen/news_cat_layout_padding_left_right"
        android:paddingRight="@dimen/news_cat_layout_padding_left_right"
        android:paddingTop="@dimen/news_cat_layout_padding_top_bottom">

        <TextView
            android:id="@+id/lbCategoryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/abc_primary_text_material_light"
            android:textSize="@dimen/news_cat_text_size" />
    </LinearLayout>
</android.support.v7.widget.CardView>